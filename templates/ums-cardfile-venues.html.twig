{{ attach_library('ums_cardfile/ums-cardfile-functions') }}

<h1>
	<span>UMS Cardfile Venues</span>
</h1>

<table id="umsvenues-table">
	<thead>
		<tr>
			<th role="columnheader">Venue Name</th>
			<th role="columnheader">DELETE?</th>
		</tr>
	</thead>
	<tbody>

		{% for row in venues %}
			<tr>
				<td>
					{{ row.name }}
				</td>
				<td>
          <a href="/cardfile/venue/delete/{{ row.id }}" class="button delete cardfile-venue" data-venue_name="{{ row.name }}">Delete</a>
				</td>
			</tr>
		{% endfor %}

	</tbody>
</table>
<div class="l-overflow-clear">
	<p>
		<a href="/cardfile/events" class="align-left base-margin-right">UMS Events List</a>
	</p>
</div>
